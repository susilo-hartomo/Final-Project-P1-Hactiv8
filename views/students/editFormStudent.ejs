<html>
<head>
    <%- include('../partials/style') %>
    <title>Edit Student</title>
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="d-flex justify-content-around">
        <h3>Edit Student</h3>
    </div>
    <br>
    <div class="d-flex justify-content-around">
        <a href="/students"><button type="button" class="btn btn-primary">Show All Data</button></a>
    </div>
    <br>

    <div class="container col-md-4">
      <form action="/students/edit/<%= students.id %> " method="post">
        <div class="form-group">
          <label for="exampleFormControlInput1">First Name</label>
          <input name="first_name" class="form-control" id="exampleFormControlInput1" value="<%= students.first_name %> " required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Last Name</label>
          <input name="last_name" class="form-control" id="exampleFormControlInput1" value="<%= students.last_name %>" required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Gender</label>
          <select class="form-control" id="exampleFormControlSelect1" name="gender" required>
            <option value="Male" <%= students.gender == 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= students.gender == 'Female' ? 'selected' : '' %>>Female</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Email</label>
          <input name="email" class="form-control" id="exampleFormControlInput1" value="<%= students.email %> " required>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Birth Date</label>
            <input name="birth_date" class="form-control" id="exampleFormControlInput1" type="date" value= <%= students.birth_date %> required>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Select Buddy</label> 
            <select class="form-control" id="exampleFormControlSelect1" name="BuddyId" required>
              <% buddies.forEach(el => { %>
                <option selected value="<%= el.id %>"> <%= el.first_name %> <%= el.last_name %>  </option>
              <% }) %>
            </select>
          </div>
        <div class="d-flex justify-content-around">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        </form>
    </div>
</body>
</html>