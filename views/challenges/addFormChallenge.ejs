<html>
<head>
    <%- include('../partials/style') %>
    <title>Add Challenge</title>
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="d-flex justify-content-around">
        <h3>Add Challenge</h3>
    </div>
    <br>
    <div class="container col-md-4">
      <form action="/challenges/add" method="post">
        <div class="form-group">
          <label for="exampleFormControlInput1">Name</label>
          <input name="name" class="form-control" id="exampleFormControlInput1" placeholder="Ex: Sudoku">
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Deadline</label>
          <input name="deadline" class="form-control" id="exampleFormControlInput1" type="date">
        </div>          
          <div class="d-flex justify-content-around">
              <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </form>
    </div>
    <br>
    <br>
    <div class="d-flex justify-content-around">
        <table class="table table-hover" style="width: 60%;">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Challenge Name</th>
                <th scope="col">Deadline</th>
              </tr>
            </thead>
            <tbody>
                <% challenge.forEach(el => { %>
                    <tr>
                        <td> <%= el.id %>  </td>
                        <td> <%= el.name %>  </td>
                        <td> <%= el.deadline %>  </td>
                    </tr>
                <% }) %>
            </tbody>    
        </table>
    </div>


</body>
</html>