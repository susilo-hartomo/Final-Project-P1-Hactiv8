<html>
<head>
    <%- include('../partials/style') %>
    <title>Add Buddy</title>
</head>
<body>
    <%- include('../partials/navbar') %>
    <div class="d-flex justify-content-around">
        <h3>Add Buddy</h3>
    </div>
    <br>
    <div class="d-flex justify-content-around">
        <a href="/buddies"><button type="button" class="btn btn-primary">Show All Data</button></a>
    </div>
    <br>

    <div class="container col-md-4">
      <form action="/buddies/add" method="post">
        <div class="form-group">
          <label for="exampleFormControlInput1">First Name</label>
          <input name="first_name" class="form-control" id="exampleFormControlInput1" value="<%= buddies.first_name %>" required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Last Name</label>
          <input name="last_name" class="form-control" id="exampleFormControlInput1" value="<%= buddies.last_name %>" required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Gender</label>
          <select class="form-control" id="exampleFormControlSelect1" name="gender" required>
            <option value="Male" <%= buddies.gender == 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= buddies.gender == 'Female' ? 'selected' : '' %>>Female</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Email</label>
          <input name="email" class="form-control" id="exampleFormControlInput1" value="<%= buddies.email %>" required>
        </div>

          
          <div class="d-flex justify-content-around">
              <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </form>
    </div>

</body>
</html>